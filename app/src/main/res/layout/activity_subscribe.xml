<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ibm.techathon.dealmania.SubscribeActivity">

    <LinearLayout android:id="@+id/subscribe_form" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <Spinner android:id="@+id/subscribe_category" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="@string/prompt_post_category" android:textSize="12sp"/>

        <EditText
            android:id="@+id/subscribe_vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_post_vendor" android:textSize="12sp"/>

        <EditText
            android:id="@+id/subscribe_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_post_location" android:textSize="12sp"/>

        <EditText
            android:id="@+id/subscribe_from_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_from_date" android:textSize="12sp"/>

        <EditText
            android:id="@+id/subscribe_to_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_to_date" android:textSize="12sp"/>

        <Button android:id="@+id/subscribe_submit_button" style="?android:textAppearanceSmall"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="16dp" android:text="@string/action_submit"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
