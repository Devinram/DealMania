<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ibm.techathon.dealmania" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="com.ibm.techathon.dealmania.DealManiaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ibm.techathon.dealmania.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ibm.techathon.dealmania.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.ibm.techathon.dealmania.PostActivity"
            android:label="@string/title_activity_post" >
        </activity>
        <activity
            android:name="com.ibm.techathon.dealmania.SearchCouponActivity"
            android:label="@string/title_activity_search_coupon" >
        </activity>
        <activity
            android:name="com.ibm.techathon.dealmania.NotificationActivity"
            android:label="@string/title_activity_notification" >
        </activity>
        <activity
            android:name="com.ibm.techathon.dealmania.SubscribeActivity"
            android:label="@string/title_activity_subscribe" >
        </activity>
        <activity
            android:name="com.ibm.techathon.dealmania.SubscribedOfferActivity"
            android:label="@string/title_activity_subscribed_offer" >
        </activity>
        <activity
            android:name="com.ibm.techathon.dealmania.CouponSharingActivity"
            android:label="@string/title_activity_coupon_sharing" >
        </activity>
        <activity
            android:name="com.ibm.techathon.dealmania.ShowSharedCouponsActivity"
            android:label="@string/title_activity_show_shared_coupons" >
        </activity>
        <activity
            android:name="com.ibm.techathon.dealmania.ShowCouponnsActivity"
            android:label="@string/title_activity_show_couponns" >
        </activity>
    </application>

</manifest>
