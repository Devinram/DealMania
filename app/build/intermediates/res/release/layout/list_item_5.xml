<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="right">

    <TextView
        android:id="@+id/li_show_coupon_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="11sp"
        android:text=""
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/li_show_coupon_vendor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="11sp"
        android:text=""
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/li_show_coupon_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="11sp"
        android:text=""
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/li_show_coupon_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="11sp"
        android:text=""
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/li_show_coupon_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="11sp"
        android:text=""
        android:layout_gravity="left" />

    <Button
        android:id="@+id/li_btn_show_coupon_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="28dp" android:textSize="11sp"
        android:text="Subscribe this coupon"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:layout_marginRight="15sp"
        android:layout_gravity="right"
        android:layout_marginBottom="5sp" />

</LinearLayout>

